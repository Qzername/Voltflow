<Application
    x:Class="Voltflow.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:semi="https://irihi.tech/semi"
    xmlns:u-semi="https://irihi.tech/ursa/themes/semi"
    xmlns:viewLocators="clr-namespace:Voltflow.ViewLocators"
    RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <viewLocators:AvaloniaViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <!--  Use SemiTheme with Ursa  -->
        <semi:SemiTheme />
        <u-semi:SemiTheme />

        <!--  Include Semi.Avalonia styles  -->
        <StyleInclude Source="avares://Semi.Avalonia.ColorPicker/Index.axaml" />
        <StyleInclude Source="avares://Semi.Avalonia.DataGrid/Index.axaml" />
        <StyleInclude Source="avares://Semi.Avalonia.TreeDataGrid/Index.axaml" />

        <!--  Include styles (even for Icons from IconPacks.Avalonia)  -->
        <StyleInclude Source="avares://IconPacks.Avalonia/Icons.axaml" />
        <StyleInclude Source="/Styles/ButtonStyle.axaml" />
        <StyleInclude Source="/Styles/IconStyle.axaml" />
        <StyleInclude Source="/Styles/SeparatorStyle.axaml" />
        <StyleInclude Source="/Styles/StackPanelStyle.axaml" />
        <StyleInclude Source="/Styles/TextBlockStyle.axaml" />
    </Application.Styles>
</Application>
