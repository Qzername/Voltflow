<UserControl
    x:Class="Voltflow.Views.AccountView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:account="clr-namespace:Voltflow.Views.Account"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Voltflow.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Design.DataContext>
        <viewModels:AccountViewModel />
    </Design.DataContext>

    <StackPanel
        MaxWidth="256"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        Classes="no-spacing">
        <!--
            Store all forms here (I split them into each file so the code here looks *clean*).
            Each form knows when to display because of AuthTypeConverter and set CurrentAuthType in AccountViewModel.
        -->
        <account:SignUpForm />
        <account:SignInForm />
        <account:TwoFactorAuthForm />
        <account:PasswordResetForm />
        <account:EmailVerificationForm />
        <account:AccountPanel />
    </StackPanel>
</UserControl>
