<UserControl
    x:Class="Voltflow.Views.NavBarView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Voltflow.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>

    <Panel>
        <!--  Left side  -->
        <StackPanel
            Margin="8"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button Command="{Binding NavigateToMapView}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconBootstrapIcons VerticalAlignment="Center" Kind="LightningChargeFill" />
                    <TextBlock VerticalAlignment="Center" Text="Home" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  Right side  -->
        <StackPanel
            Margin="8"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
			<Button Command="{Binding NavigateToCarsView}">
				<StackPanel Orientation="Horizontal">
					<iconPacks:PackIconBootstrapIcons VerticalAlignment="Center" Kind="LightningChargeFill" />
					<TextBlock VerticalAlignment="Center" Text="Cars" />
				</StackPanel>
			</Button>
			
            <Button Command="{Binding NavigateToChargeView}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconBootstrapIcons VerticalAlignment="Center" Kind="LightningChargeFill" />
                    <TextBlock VerticalAlignment="Center" Text="Charge" />
                </StackPanel>
            </Button>

            <Button Command="{Binding NavigateToStatisticsView}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconBootstrapIcons VerticalAlignment="Center" Kind="LightningChargeFill" />
                    <TextBlock VerticalAlignment="Center" Text="Statistics" />
                </StackPanel>
            </Button>

            <Button Command="{Binding NavigateToAccountView}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconBootstrapIcons VerticalAlignment="Center" Kind="PeopleFill" />
                    <TextBlock VerticalAlignment="Center" Text="Sign In" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Panel>
</UserControl>