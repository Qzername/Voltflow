<UserControl
    x:Class="Voltflow.Views.Account.PasswordResetForm"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Voltflow.Models"
    xmlns:viewModels="clr-namespace:Voltflow.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Design.DataContext>
        <viewModels:AccountViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <!--  AuthTypeConverter checks if CurrentAuthType is AuthType.PasswordReset.  -->
        <models:AuthTypeConverter x:Key="AuthTypeConverter" />
    </UserControl.Resources>

    <!--  Form  -->
    <StackPanel IsEnabled="{Binding !PasswordResetForm.Working}" IsVisible="{Binding CurrentAuthType, Converter={StaticResource AuthTypeConverter}, ConverterParameter=PasswordReset}">
        <!--  Email input  -->
        <StackPanel Classes="sm-spacing" Orientation="Horizontal">
            <iconPacks:PackIconBootstrapIcons
                VerticalAlignment="Center"
                Classes="size-sm color-gray"
                IsVisible="True"
                Kind="EnvelopeFill" />
            <TextBlock Classes="size-sm color-gray weight-bold" Text="Email" />
        </StackPanel>

        <Grid IsEnabled="{Binding !PasswordResetForm.SentToken}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                Grid.Column="0"
                Text="{Binding PasswordResetForm.Email}"
                Watermark="example@gmail.com" />

            <Button Grid.Column="2" Command="{Binding GetResetPasswordToken}">
                <iconPacks:PackIconBootstrapIcons
                    VerticalAlignment="Center"
                    IsVisible="{Binding !PasswordResetForm.ShowPassword}"
                    Kind="SendFill" />
            </Button>
        </Grid>

        <!--  Token input  -->
        <StackPanel IsEnabled="{Binding PasswordResetForm.SentToken}">
            <StackPanel Classes="sm-spacing" Orientation="Horizontal">
                <iconPacks:PackIconBootstrapIcons
                    VerticalAlignment="Center"
                    Classes="size-sm color-gray"
                    IsVisible="True"
                    Kind="KeyFill" />
                <TextBlock Classes="size-sm color-gray weight-bold" Text="Token" />
            </StackPanel>
            <TextBox Text="{Binding PasswordResetForm.Token}" Watermark="Enter received token here" />
        </StackPanel>

        <!--  Password input  -->
        <StackPanel IsEnabled="{Binding PasswordResetForm.SentToken}">
            <StackPanel Classes="sm-spacing" Orientation="Horizontal">
                <iconPacks:PackIconBootstrapIcons
                    VerticalAlignment="Center"
                    Classes="size-sm color-gray"
                    IsVisible="True"
                    Kind="ShieldLockFill" />
                <TextBlock Classes="size-sm color-gray weight-bold" Text="New Password" />
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox
                    Grid.Column="0"
                    MaxLength="32"
                    PasswordChar="*"
                    RevealPassword="{Binding PasswordResetForm.ShowPassword}"
                    Text="{Binding PasswordResetForm.Password}"
                    Watermark="Example123@" />

                <Button Grid.Column="2" Command="{Binding PasswordResetForm.TogglePassword}">
                    <StackPanel>
                        <iconPacks:PackIconBootstrapIcons
                            VerticalAlignment="Center"
                            IsVisible="{Binding !PasswordResetForm.ShowPassword}"
                            Kind="EyeFill" />

                        <iconPacks:PackIconBootstrapIcons
                            VerticalAlignment="Center"
                            IsVisible="{Binding PasswordResetForm.ShowPassword}"
                            Kind="EyeSlashFill" />
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>

        <Separator />

        <!--  Buttons  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Command="{Binding NavigateBack}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconBootstrapIcons VerticalAlignment="Center" Kind="ArrowLeft" />
                    <TextBlock VerticalAlignment="Center" Text="Go Back" />
                </StackPanel>
            </Button>

            <Button
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Classes="Success"
                Command="{Binding ResetPassword}"
                IsEnabled="{Binding PasswordResetForm.SentToken}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconBootstrapIcons VerticalAlignment="Center" Kind="Check2" />
                    <TextBlock VerticalAlignment="Center" Text="Reset" />
                </StackPanel>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
