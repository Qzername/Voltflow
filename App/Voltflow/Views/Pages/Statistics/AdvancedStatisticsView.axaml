<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Voltflow.Views.Pages.Statistics.AdvancedStatisticsView"
			 xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia">
		<StackPanel
			MaxWidth="256"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center">
		<!--Switch this to whatever makes sense but no checkbox-->
		<CheckBox IsChecked="{Binding Mode}" Content="Switch to energy used"/>

		<lvc:PieChart Series="{Binding PieData}" Title="{Binding Title}" Width="800" Height="450"/>

		<Panel Background="Gray" Width="500" Height="50">
			<Button Content="Generate CSV"/>
		</Panel>

		<DataGrid Height="100"
				  ItemsSource="{Binding Elements}"
				  AutoGenerateColumns="True" IsReadOnly="True"
				  GridLinesVisibility="All"
				  BorderThickness="1" BorderBrush="Gray">
		</DataGrid>
	</StackPanel>
</UserControl>
