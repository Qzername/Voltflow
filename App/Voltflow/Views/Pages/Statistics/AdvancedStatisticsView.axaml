<UserControl
    x:Class="Voltflow.Views.Pages.Statistics.AdvancedStatisticsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:statistics="clr-namespace:Voltflow.ViewModels.Pages.Statistics"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel
            Width="256"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">
            <!--  Switch this to whatever makes sense but no checkbox  -->
            <CheckBox Content="Switch to energy used" IsChecked="{Binding Mode}" />

            <lvc:PieChart
				x:Name="pieChart"
                Width="800"
                Height="450"
                Series="{Binding PieData}" />

			<!--Stations-->
			<Panel
				Width="500"
				Height="50"
				Background="Gray">
				<Button Command="{Binding GenerateStationsCsv}" Content="Generate CSV" />
			</Panel>

			<DataGrid
				Width="500"
                Height="400"
                AutoGenerateColumns="True"
                BorderBrush="Gray"
                BorderThickness="1"
                GridLinesVisibility="All"
                IsReadOnly="True"
                ItemsSource="{Binding StationGridData}" />

			<!--Transactions-->
            <Panel
                Width="500"
                Height="50"
                Background="Gray">
                <Button Command="{Binding GenerateTransactionsCsv}" Content="Generate CSV" />
            </Panel>

			<DataGrid
				Width="500"
                Height="400"
                AutoGenerateColumns="True"
                BorderBrush="Gray"
                BorderThickness="1"
                GridLinesVisibility="All"
                IsReadOnly="True"
                ItemsSource="{Binding TransactionsGridData}" />

           
        </StackPanel>
    </ScrollViewer>
</UserControl>
