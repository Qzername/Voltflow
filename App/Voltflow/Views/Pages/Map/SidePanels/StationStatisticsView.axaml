<UserControl
    x:Class="Voltflow.Views.Pages.Map.SidePanels.StationStatisticsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sidePanels="clr-namespace:Voltflow.ViewModels.Pages.Map.SidePanels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

	<ScrollViewer>
		<StackPanel VerticalAlignment="Center">
			<TextBlock
				HorizontalAlignment="Center"
				Classes="size-lg weight-bold"
				Text="Rush hours (Monday to Sunday)" />

			<!-- Weekly usage -->
			<lvc:CartesianChart
				Height="512"
				MaxWidth="512"
				Series="{Binding WeekUsage}" />

			<TextBlock
				HorizontalAlignment="Center"
				Classes="size-lg weight-bold"
				Text="Peek hours"/>
				
			<!-- Peek hours -->
			<lvc:CartesianChart
				Height="512"
				MaxWidth="512"
				Series="{Binding PeekHours}" />

			<TextBlock
				HorizontalAlignment="Center"
				Classes="size-lg weight-bold"
				Text="Opening hours"/>
		</StackPanel>
	</ScrollViewer>
</UserControl>
