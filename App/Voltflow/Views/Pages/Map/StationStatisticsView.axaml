<UserControl
    x:Class="Voltflow.Views.Pages.Map.StationStatisticsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sidePanels="clr-namespace:Voltflow.ViewModels.Pages.Map.SidePanels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

	<ScrollViewer>
		<StackPanel VerticalAlignment="Center">
			<TextBlock
				HorizontalAlignment="Center"
				Classes="size-lg weight-bold"
				Text="Rush hours (Monday to Sunday)" />

			<!-- Weekly usage -->
			<lvc:CartesianChart
				Height="512"
				MaxWidth="512"
				Series="{Binding WeekUsage}" />

			<TextBlock
				HorizontalAlignment="Center"
				Classes="size-lg weight-bold"
				Text="Peek hours"/>
				
			<!-- Peek hours -->
			<lvc:CartesianChart
				Height="512"
				MaxWidth="512"
				Series="{Binding PeekHours}" />

			<!-- Opening hours -->
			
			<TextBlock
				HorizontalAlignment="Center"
				Classes="size-lg weight-bold"
				Text="Opening hours"/>
			
			<!--these are days of week-->
			<!--im not bothering using textblock formating, you can change it if you want-->
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding Hours.Monday[0]}"/>
				<TextBlock Text=" - "/>
				<TextBlock Text="{Binding Hours.Monday[1]}"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding Hours.Tuesday[0]}"/>
				<TextBlock Text=" - "/>
				<TextBlock Text="{Binding Hours.Tuesday[1]}"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding Hours.Wednesday[0]}"/>
				<TextBlock Text=" - "/>
				<TextBlock Text="{Binding Hours.Wednesday[1]}"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding Hours.Thursday[0]}"/>
				<TextBlock Text=" - "/>
				<TextBlock Text="{Binding Hours.Thursday[1]}"/>
			</StackPanel>
			
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding Hours.Friday[0]}"/>
				<TextBlock Text=" - "/>
				<TextBlock Text="{Binding Hours.Friday[1]}"/>
			</StackPanel>
			
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding Hours.Saturday[0]}"/>
				<TextBlock Text=" - "/>
				<TextBlock Text="{Binding Hours.Saturday[1]}"/>
			</StackPanel>
			
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding Hours.Sunday[0]}"/>
				<TextBlock Text=" - "/>
				<TextBlock Text="{Binding Hours.Sunday[1]}"/>
			</StackPanel>

			<!--this should be visible for admins only-->
			<Button Command="{Binding NavigateToModifyHours}" Content="Modify opening hours"/>
		</StackPanel>
	</ScrollViewer>
</UserControl>
