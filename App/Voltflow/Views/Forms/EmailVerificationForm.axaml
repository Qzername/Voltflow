<UserControl
    x:Class="Voltflow.Views.Forms.EmailVerificationForm"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Voltflow.Models"
    xmlns:viewModels="clr-namespace:Voltflow.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Design.DataContext>
        <viewModels:AuthViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <!--  AuthTypeConverter checks if CurrentAuthType is AuthType.EmailVerification.  -->
        <models:AuthTypeConverter x:Key="AuthTypeConverter" />
    </UserControl.Resources>

    <!--  Form  -->
    <StackPanel IsEnabled="{Binding !EmailVerificationForm.Working}" IsVisible="{Binding CurrentAuthType, Converter={StaticResource AuthTypeConverter}, ConverterParameter=EmailVerification}">
        <!--  Token input  -->
        <StackPanel Classes="sm-spacing" Orientation="Horizontal">
            <iconPacks:PackIconBootstrapIcons
                VerticalAlignment="Center"
                Classes="size-sm color-gray"
                IsVisible="True"
                Kind="KeyFill" />
            <TextBlock Classes="size-sm color-gray weight-bold" Text="Token" />
        </StackPanel>
        <TextBox Text="{Binding EmailVerificationForm.Token}" Watermark="Enter received token here" />

        <Separator />

        <!--  Buttons  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Command="{Binding NavigateBack}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconBootstrapIcons VerticalAlignment="Center" Kind="ArrowLeft" />
                    <TextBlock VerticalAlignment="Center" Text="Go Back" />
                </StackPanel>
            </Button>

            <Button
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Classes="Success"
                Command="{Binding VerifyEmail}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconBootstrapIcons VerticalAlignment="Center" Kind="Check2" />
                    <TextBlock VerticalAlignment="Center" Text="Confirm" />
                </StackPanel>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
