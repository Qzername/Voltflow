<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <!--  Light Theme  -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ForegroundGray" Color="DimGray" />
                </ResourceDictionary>

                <!--  Dark Theme  -->
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ForegroundGray" Color="LightGray" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <!--  Tiny TextBlock  -->
    <Style Selector="TextBlock.size-xs">
        <Setter Property="FontSize" Value="10" />
    </Style>

    <!--  Small TextBlock  -->
    <Style Selector="TextBlock.size-sm">
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!--  Medium (default) TextBlock  -->
    <Style Selector="TextBlock.size-md">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!--  Large TextBlock  -->
    <Style Selector="TextBlock.size-l">
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!--  Extra large TextBlock  -->
    <Style Selector="TextBlock.size-xl">
        <Setter Property="FontSize" Value="18" />
    </Style>

    <!--  Bold TextBlock  -->
    <Style Selector="TextBlock.weight-bold">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <!--  Gray TextBlock  -->
    <Style Selector="TextBlock.color-gray">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundGray}" />
    </Style>

    <!--  Hyperlink TextBlock  -->
    <Style Selector="TextBlock.hyperlink">
        <Setter Property="Foreground" Value="LightSkyBlue" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</Styles>