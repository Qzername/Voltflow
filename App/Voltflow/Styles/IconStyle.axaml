<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia">
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <!--  Light Theme  -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="IconForegroundGray" Color="DimGray" />
                    <SolidColorBrush x:Key="IconForegroundGrayDisabled" Color="LightGray" />
                </ResourceDictionary>

                <!--  Dark Theme  -->
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="IconForegroundGray" Color="LightGray" />
                    <SolidColorBrush x:Key="IconForegroundGrayDisabled" Color="DimGray" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <!--  Gray icon  -->
    <Style Selector="iconPacks|PackIconBootstrapIcons.color-gray">
        <Setter Property="Foreground" Value="{DynamicResource IconForegroundGray}" />
    </Style>

    <!--  Gray disabled icon  -->
    <Style Selector="iconPacks|PackIconBootstrapIcons.color-gray:disabled">
        <Setter Property="Foreground" Value="{DynamicResource IconForegroundGrayDisabled}" />
    </Style>

    <!--  Tiny icon  -->
    <Style Selector="iconPacks|PackIconBootstrapIcons.size-xs">
        <Setter Property="Width" Value="10" />
        <Setter Property="Height" Value="10" />
    </Style>

    <!--  Small icon  -->
    <Style Selector="iconPacks|PackIconBootstrapIcons.size-sm">
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="12" />
    </Style>

    <!--  Medium icon  -->
    <Style Selector="iconPacks|PackIconBootstrapIcons.size-md">
        <Setter Property="Width" Value="14" />
        <Setter Property="Height" Value="14" />
    </Style>

    <!--  Large (default) icon  -->
    <Style Selector="iconPacks|PackIconBootstrapIcons">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
    </Style>

    <!--  Extra large icon  -->
    <Style Selector="iconPacks|PackIconBootstrapIcons.size-xl">
        <Setter Property="Width" Value="18" />
        <Setter Property="Height" Value="18" />
    </Style>
</Styles>
